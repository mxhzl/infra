services:
  mind_electric:
    container_name: "${CONTAINER_NAME:-mind_electric}"
    image: registry.digitalocean.com/mxhzl/mind_electric:{{ mind_electric_version }}
    ports:
      - "${HOST_PORT:-80}:80"
    volumes:
      - mind_electric_storage:/rails/storage
    env_file:
      - .env
    restart: unless-stopped
  
volumes:
  mind_electric_storage: